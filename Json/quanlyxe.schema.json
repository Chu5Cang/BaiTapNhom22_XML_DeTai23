{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "QuanLyXe",
  "type": "object",
  "properties": {
    "loaixe": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "malx": {"type": "string","pattern": "^LX\\d{4}$"},
          "mabgRef": {"type": "string","pattern": "^BG\\d{4}$"},
          "tenloaixe": {"type": "string","maxLength": 50}
        },
        "required": ["malx", "mabgRef", "tenloaixe"],
        "additionalProperties": false
      }
    },
    "xe": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "bienso": {"type": "string","pattern": "^\\d{2}[A-Z][A-Z0-9]?-\\d{3}\\.\\d{2}$"},
          "makh": { "type": "string", "pattern": "^KH\\d{2}\\d{6}$" },
          "malxRef": {"type": "string","pattern": "^LX\\d{4}$"}
        },
        "required": ["bienso", "makhRef", "malxRef"],
        "additionalProperties": false
      }
    }
  },
  "required": ["loaixe", "xe"],
  "additionalProperties": false
}
