{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "QuanLyXe",
  "type": "object",
  "properties": {
    "loaixe": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "malx": {"type": "string","pattern": "^LX\\d{2}$"},
          "mabgRef": {"type": "string","pattern": "^BG\\d{2}$"},
          "tenloaixe": {"type": "string","minLength": 2,"maxLength": 50}
        },
        "required": ["malx", "mabgRef", "tenloaixe"],
        "additionalProperties": false
      }
    },
    "xe": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "bienso": {"type": "string","pattern": "^[0-9]{2}[A-Z]-[0-9]{4,5}$"},
          "makh": { "type": "string", "pattern": "^KH\\d{2}\\d{6}$" },
          "malxRef": {"type": "string","pattern": "^LX\\d{2}$"}
        },
        "required": ["bienso", "makhRef", "malxRef"],
        "additionalProperties": false
      }
    }
  },
  "required": ["loaixe", "xe"],
  "additionalProperties": false
}
